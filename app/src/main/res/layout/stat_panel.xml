<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">

    <!-- IMAGE EVENT TYPE -->
    <ImageView
            android:id="@+id/image_eventtype"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/background_header_panel"
            android:scaleType="centerCrop"/>

    <!-- TITLE EVENT TYPE -->
    <TextView
            android:id="@+id/title_eventtype"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:background="@drawable/background_header_panel"
            android:textSize="24sp"
            android:gravity="center"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
                android:id="@+id/text_evolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="@string/evolution"/>

        <!-- ICON EVOLUTION -->
        <ImageView
                android:id="@+id/evolution_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/text_evolution"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="5dp"/>

    </android.support.constraint.ConstraintLayout>



</LinearLayout>