<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

    <!-- TITLE LEGEND -->
    <TextView
            android:id="@+id/title_legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:text="@string/title_legend"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:lines="1"/>

    <LinearLayout
            android:id="@+id/layout_event_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_legend"
            android:layout_margin="10dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/icon_meal_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/background_event_and_meal"/>

        <TextView
                android:id="@+id/text_meal_event"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="@string/text_meal_and_event"
                android:lines="2"
                android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_meal_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_event_meal"
            android:layout_margin="10dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/icon_meal_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/background_meal_only"/>

        <TextView
                android:id="@+id/text_meal_only"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="@string/text_meal_only"
                android:lines="2"
                android:layout_marginStart="10dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_event_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_meal_only"
            android:layout_margin="10dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/icon_event_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/background_event_only"/>

        <TextView
                android:id="@+id/text_event_only"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:text="@string/text_event_only"
                android:gravity="center_vertical"
                android:lines="2"
                android:layout_marginStart="10dp"/>

    </LinearLayout>

    <TextView
            android:id="@+id/text_click_allowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="@string/click_allowance"
            android:layout_below="@+id/layout_event_only"
            android:layout_margin="10dp"/>

    <!-- BUTTON OK -->
    <Button
            android:id="@+id/button_ok"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="30dp"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:layout_below="@+id/text_click_allowance"
            style="?android:attr/borderlessButtonStyle"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>