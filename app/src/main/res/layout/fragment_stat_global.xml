<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/title_statfragment"
            android:background="@drawable/background_title_statfragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"/>


    <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/global_pie_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <!-- LINE 1 -->
        <LinearLayout
                android:id="@+id/food_layout_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <include
                    android:id="@+id/food1"
                    layout="@layout/food_stat_layout"/>

            <include
                    android:id="@+id/food2"
                    layout="@layout/food_stat_layout"/>

            <include
                    android:id="@+id/food3"
                    layout="@layout/food_stat_layout"/>

        </LinearLayout>

        <!-- LINE 2 -->
        <LinearLayout
                android:id="@+id/food_layout_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <include
                    android:id="@+id/food4"
                    layout="@layout/food_stat_layout"/>

            <include
                    android:id="@+id/food5"
                    layout="@layout/food_stat_layout"/>

            <include
                    android:id="@+id/food6"
                    layout="@layout/food_stat_layout"/>

            <include
                    android:id="@+id/food7"
                    layout="@layout/food_stat_layout"/>

        </LinearLayout>

        <!-- LINE 3 -->
        <LinearLayout
                android:id="@+id/food_layout_line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

            <include
                    android:id="@+id/food8"
                    layout="@layout/food_stat_layout"/>

            <include
                    android:id="@+id/food9"
                    layout="@layout/food_stat_layout"/>

            <include
                    android:id="@+id/food10"
                    layout="@layout/food_stat_layout"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>