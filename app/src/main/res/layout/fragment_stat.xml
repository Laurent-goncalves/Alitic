<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_statfragment"
        android:background="@drawable/background_title_statfragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="30dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        android:layout_marginTop="20dp"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/global_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>


    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include
                android:id="@+id/food1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/food1"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/food2"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food4"
                app:layout_constraintTop_toBottomOf="@id/food1"
                app:layout_constraintLeft_toLeftOf="parent"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food5"
                app:layout_constraintTop_toBottomOf="@id/food1"
                app:layout_constraintLeft_toRightOf="@id/food4"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food6"
                app:layout_constraintTop_toBottomOf="@id/food1"
                app:layout_constraintLeft_toRightOf="@id/food5"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food7"
                app:layout_constraintTop_toBottomOf="@id/food1"
                app:layout_constraintLeft_toRightOf="@id/food6"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food8"
                app:layout_constraintTop_toBottomOf="@id/food4"
                app:layout_constraintLeft_toLeftOf="parent"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food9"
                app:layout_constraintTop_toBottomOf="@id/food4"
                app:layout_constraintLeft_toRightOf="@id/food8"
                layout="@layout/food_stat_layout"/>

        <include
                android:id="@+id/food10"
                app:layout_constraintTop_toBottomOf="@id/food4"
                app:layout_constraintLeft_toRightOf="@id/food9"
                app:layout_constraintRight_toRightOf="parent"
                layout="@layout/food_stat_layout"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>