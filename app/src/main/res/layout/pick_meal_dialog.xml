<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="20dp"
        android:background="@color/colorPanelMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- TITLE MON REPAS-->
    <com.g.laurent.alitic.Views.MealTextView
            android:id="@+id/title_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fontName="Satisfy-Regular"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:text="@string/panel_title"/>

    <FrameLayout
            android:id="@+id/framelayout_foods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

        <!-- MESSAGE "aucun aliment sélectionné" -->
        <com.g.laurent.alitic.Views.MealTextView
                android:id="@+id/no_food_in_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:fontName="Satisfy-Regular"
                android:textSize="20sp"
                android:text="@string/message_no_food"
                android:visibility="gone"/>
        

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- View with all foods selected -->
            <com.g.laurent.alitic.Views.FoodLayout
                    android:id="@+id/layout_all_foods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

        </ScrollView>

    </FrameLayout>

    <!-- BUTTONS -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="end"
            android:orientation="horizontal">

        <!-- BUTTON CANCEL -->
        <Button
                android:id="@+id/button_cancel_meal"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="@string/cancel"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"/>

        <!-- BUTTON SAVE -->
        <Button
                android:id="@+id/button_save_meal"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginStart="10dp"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>
